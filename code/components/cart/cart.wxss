/* components/cart/cart.wxss */
.container  .itemlist  .image{
    width: 80px;
    height: 80px;
    flex: 3;
}

.container  .itemlist{
    width: 100%;
    height: 100px;
    border: 1px solid #ccc;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.container  .itemlist  .switch{
    flex: 1;
}

.container  .itemlist  .info{
    flex: 7;
    margin-left: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 80px;
}
.infolist{
    display: flex;
    justify-content: space-between;
}
.number  .text{
    margin-right: 10px;
}

.bottom{
    width: 100%;
    height: 45px;
    background-color: #123456;
    display: flex;
    justify-content: space-between;
    color: #fff;
    align-items: center;
    position: fixed;
    left: 0;
    bottom: 0;
}

.bottom-l,.bottom-r{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.jiesuan{
    margin-left: 20px;
}

.infoaction{
    display: flex;
    justify-content: space-between;
    padding-right: 10px;
}